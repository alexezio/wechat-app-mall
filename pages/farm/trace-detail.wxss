/* pages/farm/trace-detail.wxss */
.trace-container {
  background: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
  padding-bottom: 40rpx;
}

/* 产品卡片 */
.product-card {
  background: linear-gradient(135deg, #07c160 0%, #05a850 100%);
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
  color: #fff;
  box-shadow: 0 4rpx 20rpx rgba(7, 193, 96, 0.3);
}

.product-header {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.verify-text {
  margin-left: 12rpx;
  font-size: 36rpx;
  font-weight: bold;
}

.product-info .info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
}

.product-info .info-row:last-child {
  border-bottom: none;
}

.product-info .label {
  font-size: 28rpx;
  opacity: 0.9;
}

.product-info .value {
  font-size: 28rpx;
  font-weight: 500;
}

.product-info .code {
  font-family: monospace;
  letter-spacing: 2rpx;
}

/* 通用卡片 */
.farm-card,
.timeline-card,
.report-card,
.cert-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
}

.card-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.card-title text {
  margin-left: 12rpx;
}

/* 农庄信息 */
.farm-info .info-row {
  display: flex;
  padding: 16rpx 0;
}

.farm-info .label {
  width: 160rpx;
  font-size: 28rpx;
  color: #666;
}

.farm-info .value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 时间线 */
.timeline {
  position: relative;
  padding-left: 60rpx;
}

.timeline-item {
  position: relative;
  margin-bottom: 40rpx;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-dot {
  position: absolute;
  left: -60rpx;
  top: 0;
  width: 24rpx;
  height: 24rpx;
  background: #07c160;
  border: 4rpx solid #fff;
  border-radius: 50%;
  box-shadow: 0 0 0 2rpx #07c160;
  z-index: 2;
}

.timeline-line {
  position: absolute;
  left: -48rpx;
  top: 28rpx;
  bottom: -40rpx;
  width: 2rpx;
  background: #e5e5e5;
  z-index: 1;
}

.timeline-content {
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 24rpx;
}

.timeline-date {
  font-size: 24rpx;
  color: #07c160;
  margin-bottom: 8rpx;
}

.timeline-stage {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.timeline-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.timeline-images {
  display: flex;
  flex-wrap: wrap;
  margin-top: 16rpx;
  gap: 12rpx;
}

.timeline-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
}

/* 质量报告 */
.report-list {
  
}

.report-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.report-item:last-child {
  border-bottom: none;
}

.report-info {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.report-name {
  font-size: 28rpx;
  color: #333;
}

.report-badge {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  margin-left: 20rpx;
}

.report-badge.pass {
  background: #e7f7ed;
  color: #07c160;
}

.report-badge.testing {
  background: #fff4e6;
  color: #ff9500;
}

/* 认证资质 */
.cert-list {
  
}

.cert-item {
  display: flex;
  align-items: flex-start;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.cert-item:last-child {
  border-bottom: none;
}

.cert-info {
  flex: 1;
  margin-left: 16rpx;
}

.cert-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.cert-no {
  display: block;
  font-size: 24rpx;
  color: #999;
}

